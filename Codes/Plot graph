import os
import pandas as pd
import matplotlib.pyplot as plt
from openpyxl import Workbook
from openpyxl.drawing.image import Image

input_folder = 'Extracted Data/VRU Headform - Color-wise data'
output_folder = 'Extracted Data/VRU Headform - Color-wise graph'

# Ensure the output folder exists
os.makedirs(output_folder, exist_ok=True)

# Iterate over each Excel file in the input folder
for filename in os.listdir(input_folder):
    if filename.endswith('.xlsx'):
        input_file_path = os.path.join(input_folder, filename)
        output_file_path = os.path.join(output_folder, filename)
        
        # Load the Excel file
        xl = pd.ExcelFile(input_file_path)
        
        # Create a new Excel workbook for the output
        wb = Workbook()
        
        for sheet_name in xl.sheet_names:
            # Read the sheet into a DataFrame
            df = xl.parse(sheet_name)

            # Extract x and y axis labels from the first row
            x_label = df.columns[0]
            y_label = df.columns[1]

            # Plot the data
            plt.figure()
            plt.plot(df.iloc[:, 0], df.iloc[:, 1])
            plt.xlabel(x_label, fontsize=10)
            plt.ylabel(y_label, fontsize=10)
            plt.title(sheet_name, fontsize=12)
            plt.xticks(rotation=90, fontsize=8)  # Set x-axis labels to be vertical with smaller font size
            plt.yticks(fontsize=8)  # Set y-axis labels to smaller font size
            plt.tight_layout()  # Adjust layout to fit everything neatly

            # Save the plot as an image
            plot_image_path = os.path.join(output_folder, f"{sheet_name}.png")
            plt.savefig(plot_image_path)
            plt.close()

            # Add the image to a new sheet named after the input sheet
            if sheet_name in wb.sheetnames:
                ws = wb[sheet_name]
            else:
                ws = wb.create_sheet(title=sheet_name)

            # Add the image to the sheet
            img = Image(plot_image_path)
            ws.add_image(img, 'A1')  # Add image at the first cell; adjust as needed

        # Remove the default sheet created by Workbook() if it was not used
        if 'Sheet' in wb.sheetnames:
            default_sheet = wb['Sheet']
            wb.remove(default_sheet)

        # Save the new Excel file
        wb.save(output_file_path)
        print(f"Graphs saved to {output_file_path}")
